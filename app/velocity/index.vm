<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="viewport" content="width=device-width">
<title>顺丰海淘</title>
<link href="css/common.css" rel="stylesheet" type="text/css" />
<link href="css/index.css" rel="stylesheet" type="text/css" />
</head>
<body>
  #foreach ($el in $content[0].imgInfos)
  <div class="banner" style="background: url(${el.imgUrl}) no-repeat center;"></div>
  #end

  #foreach ($el in $content)
    #if($velocityCount > 0 )
      #if ($velocityCount % 4 == 1)
  <div class="m1">
    <div class="mh ">
      <div class="pm clearfix">
        <img class="fl" src="${el.imgInfos[0].imgUrl}">
      </div>
    </div>
      #elseif ($velocityCount % 4 == 2)
    <div class="mb pm">
      <div class="mr1 clearfix" style="background-image: url(${el.imgInfos[0].imgUrl});">
      </div>
      #elseif ($velocityCount % 4 == 3)
      <div class="product fr">
        <div class="product-r1">
          <a href="${el.productInfos[0].link}">
            <img src="${el.productInfos[0].imgUrl}" alt="" >
          </a>
          <span></span>
        </div>
        <h3><a href="${el.productInfos[0].link}">${el.productInfos[0].name}</a></h3>
        <div class="product-r2">
          <span class="product-r2c1">促销价：<b>￥</b><strong>${el.productInfos[0].listPrice}</strong></span>
          <span class="product-r2c2">零售价：￥${el.productInfos[0].price}</span>
        </div>
        <div class="product-btn"><a href="${el.productInfos[0].link}">立即购买 &gt;</a></div>
      </div>

      #elseif ($velocityCount % 4 == 0)
      <div class="mr2">
        <ul class="clearfix">
          #foreach ($product in $el.productInfos)
          <li class="product">
            <div class="product-r1">
              <a href="${product.link}">
                <img src="${product.imgUrl}" alt="" >
              </a>
              <span></span>
            </div>
            <h3><a href="${product.link}">${product.name}</a></h3>
            <div class="product-r2">
              <span class="product-r2c1">促销价：<b>￥</b><strong>${product.listPrice}</strong></span>
              <span class="product-r2c2">零售价：￥${product.price}</span>
            </div>
            <!--售罄状态-->
            <div class="product-btn"><a href="${product.link}">敬请期待 ...</a></div>
            <div class="mask"></div>
            <div class="icon-sold"></div>
            <!--售罄状态-->
          </li>
          #end
        </ul>
      </div>
      #end
    #end
    </div>
  </div>
  #end
  <a href="#" class="btn-top">回到顶部</a>
</body>

